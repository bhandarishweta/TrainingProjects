package com.example.consumer.service;

import org.modelmapper.ModelMapper;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.consumer.domain.Notification;
import com.example.consumer.domain.dto.NotificationDto;
import com.example.consumer.repository.ConsumerRepository;

@Service
public class ConsumerService {
private Logger log = LoggerFactory.getLogger(ConsumerService.class);
	
    private final ConsumerRepository consumerRepository;
    private final ModelMapper modelMapper;

    @Autowired
    public ConsumerService(ConsumerRepository consumerRepository, ModelMapper modelMapper) {
        this.consumerRepository = consumerRepository;
        this.modelMapper = modelMapper;
    }

    public void persistNotification(NotificationDto notificationDto) {
        Notification notification;
		try {
			notification = ModelMapper.map(notificationDto, Notification.class);
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
        
        
        System.out.println("notification at consumer: " + notification);
        FoodOrder persistedFoodOrder = consumerRepository.save(Notification);

        log.info("food order persisted {}", persistedFoodOrder);
    }

}
